# AI Podcast Agent Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration (REQUIRED)
# Replace 'your_password_here' with your actual PostgreSQL password
AIPOD_DB_PASSWORD=your_password_here

# LLM Configuration (OPTIONAL) 
# Add your OpenAI API key to use real LLM
# If not provided, the system will use a mock LLM for testing
OPENAI_API_KEY=your_openai_api_key_here

# Optional Database Overrides (uncomment if needed)
# AIPOD_DB_HOST=localhost
# AIPOD_DB_PORT=5432
# AIPOD_DB_NAME=aipod
# AIPOD_DB_USER=aipod_user